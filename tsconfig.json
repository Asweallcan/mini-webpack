{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "lib": ["DOM", "ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "sourceMap": false,
    "inlineSources": false,
    "esModuleInterop": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
